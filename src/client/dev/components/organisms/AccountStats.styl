.stats-container {
	display: flex;
	justify-content: center;
	position: relative;
	background-color: #144052;
	height: 250px;
	
	.stats {
		height: 100%;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		
		.message {
			font-size: 1.5em;
			color: white;
		}
	}
	
	.bottom-bar {
		width: 100%;
		position: absolute;
		bottom: -10px;
		display: flex;
		justify-content: center;
		
		.button {
			background-color: #144052;
			color: white;
			padding: 5px;
			font-size: 12px;
			border-radius: 10px;
			z-index: 2;
			
			&:hover {
				background-color: #ee6123;
			}
		}
		
	}
}