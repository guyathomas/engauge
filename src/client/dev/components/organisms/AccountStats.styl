.stats-container {
	background-color: #144052;
	height: 250px;
	display: flex;
	    flex-direction: column;
	.stats {
		height: 100%;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		
		.message {
			font-size: 1.5em;
			color: white;
		}
	}
	
	.bottom-bar {
		width: 100%;
		position: relative;
		    justify-content: center;
		    display: flex;
		    bottom: -10px;		
		.button {
			background-color: #144052;
			color: white;
			padding: 5px;
			font-size: 12px;
			border-radius: 10px;
			
			&:hover {
				background-color: #ee6123;
			}
		}
		
	}
}