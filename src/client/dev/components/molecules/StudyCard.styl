.study {
    display: flex;
    flex-shrink: 0;
    flex-direction: row;
    background-color: white;
    background: #FEFEFE;
    justify-content: space-between;
    padding: 10px;
    border-bottom: 1px solid grey;
    background-color: rgba(0,0,0,0);
    height: 110px;
    &.selected {
      background-color: #528DFF;
      color: white;
    }
    
    .imgwrapper {
      width: 150px;
      height: 100%;
      align-self: center;
    }

    img {
      width:100%;
      height: 100%;
    }

    .details {
      display: flex;
      flex-direction: column;
      justify-content: space-around;
    }

    .details .session-count{
      color: #ACACAC;
      font-style: italic;
      font-weight: 200;
      color: inherit;
    }
}
