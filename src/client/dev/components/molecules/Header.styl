.primary-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: header-height;
  background-color: dark-green;
  color: white;
  font-weight: lighter;
  padding: 0 1em;
  a {
    font-size: 1em;
    color: white;
    margin: 0 0.5em
  }

  .button {
    background-color: #528DFF;
    padding: 8px 16px;
    margin-right: 15px;
  }

  .button:hover {
    background-color: #ee6123;
  }

  .hamburger {
    font-size: 45px;
    padding: 8px 16px;
  }

  .first-item {
    margin-left: auto;
  }
}
