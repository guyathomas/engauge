.primary-nav {
    height: 30px;
  display: flex;
    background-color: #003144;
    padding: 1em;
    color: white;
    flex-direction: row;
  font-weight: lighter;
    align-items: center;
}

.primary-nav a {
  text-decoration:none;
  font-size: 1em;
  color: #FFFFFF;
  letter-spacing: 0;
  margin: 0 0.5em
}

.primary-nav .button {
  background-color: #528DFF;
  padding: 8px 16px;
  margin-right: 15px;
}

.primary-nav .button:hover {
  background-color: #ee6123;
}

.primary-nav .hamburger {
  font-size: 45px;
  padding: 8px 16px;
}

.primary-nav .first-item {
  margin-left: auto;
}