.step-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 70px 50px;
  color: dark-grey;
  & > * {
    padding-bottom: 1em;
  }
  h2 {
    font-weight: 600;
  }
  h3 {
    font-weight: 500;
  }
  
  .steps {
    display: flex;
    
    @media screen and (max-width: break-medium) {
      flex-direction: column;
    }
    
    .step {
      display: flex;
      flex-direction: column;
      width: 350px;
      & > * {
        padding-bottom: 20px;
      }
      .fa {
        color: action;
      }
    }
  }
}